import os
import serial

# Set up the serial connection to the Arduino GSM module
ser = serial.Serial(CONNECT ARDUINO)

def getImage():

    os.system("raspistill -o image.jpg")


    imageO = open('image.jpg', 'r')
    data = imageO.read()
    imageO.close()

    #to arduino
    ser.write(data)


getImage()

